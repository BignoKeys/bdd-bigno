
	<!-- Css Documento -->
	<link rel="stylesheet" href="/css/gloss.css">


		<!-- Div que envolve todo o conteúdo -->
		<div class="glossario" id="{{id}}">

			<!-- Imagem do estado do descritor -->			
			{{#image}}
			<img id="image" src="{{image}}">
			{{/image}}
			<!-- Nome do estado do descritor -->
			<h2 id="label">{{state}}</h2>
			<h3 id="sublabel">{{subtitle}}</h3>

			<!-- Descrição do estado do descritor -->
			<p id="description">{{definition}}</p>
			{{#references}}
				<h3 id="ref_title">{{referenceLabel}}</h3>			
			{{/references}}
			<!-- Div que envolve as referências -->
			<div id="references" class="ref-glossario">
				{{#references}}
				<!-- Cada referência é um elemento <p> -->
				<p>{{ref}}</p>
				{{/references}}
			</div>			
		</div>

	
