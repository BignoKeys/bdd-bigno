	<!-- Início: Códigos para o Mapa -->
	<script type="text/javascript">
		var specimenDb = {};
		var marker = null;
		$(document).ready(function(){
			readSpecimen("{{id}}", function() {
				var map = L.map('map',{scrollWheelZoom:false}).setView([-15.096511,-48.351517], 4);
				map.on("layeradd",function (e) {
					if(marker == null){
				    var p = [specimenDb["dwc:decimalLatitude"].value, specimenDb["dwc:decimalLongitude"].value];
				    $("#latitude").append(p[0].toFixed(6));
				    $("#longitude").append(p[1].toFixed(6));
						marker = "Not null";
						L.marker(p,{opacity:0.9}).addTo(map);
				    map.setView(p, 17);
				  }
				})
				mapLink = '';
				L.tileLayer('http://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}', {attribution: mapLink, maxZoom: 17}).addTo(map);
			});
		});

  	//Final do Código do Mapa

	</script>
	<!-- Final: Códigos para o Mapa e Tabela -->


